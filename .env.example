# Environment Configuration
NODE_ENV=development

# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# GitHub Configuration
# GITHUB_TOKEN: Get from https://github.com/settings/tokens (optional but recommended)
# GITHUB_WEBHOOK_SECRET: Generate a random 32+ character string
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
DATABASE_PATH=./data/pingu.db
DATABASE_BUSY_TIMEOUT=30000

# Server Configuration
PORT=3000
WEBHOOK_HOST=0.0.0.0
WEBHOOK_BASE_PATH=/api
WEBHOOK_BASE_URL=https://your-domain.com
HEALTH_PORT=3001

# Event Processing Configuration
FILTER_BOT_ISSUES=true

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# Rate Limiting Configuration
GITHUB_RATE_LIMIT_PER_HOUR=5000
GITHUB_RETRY_DELAY=1000
GITHUB_MAX_RETRIES=3
DISCORD_RATE_LIMIT_PER_SECOND=50
DISCORD_BURST_LIMIT=5

# Security Configuration
# ENCRYPTION_KEY: Generate a random 32+ character string (required in production)
# Use: openssl rand -hex 32 or node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_character_encryption_key_here
# Note: GITHUB_WEBHOOK_SECRET is also used for webhook signature validation